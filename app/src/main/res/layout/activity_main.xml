<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/fn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:hint="Enter First Name"
        android:minHeight="48dp"
        tools:ignore="DuplicateClickableBoundsCheck,DuplicateClickableBoundsCheck" />

    <EditText
        android:id="@+id/ln"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:hint="Enter Last Name"
        android:minHeight="48dp"
        tools:ignore="UnknownId,DuplicateClickableBoundsCheck,DuplicateClickableBoundsCheck" />
    <EditText
        android:id="@+id/en"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:hint="Enter Email-ID"
        android:layout_below="@+id/ln"
        android:minHeight="48dp"
        tools:ignore="UnknownId" />
    <Button
        android:id="@+id/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/en"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Submit"
        tools:ignore="InvalidId" />



</RelativeLayout>